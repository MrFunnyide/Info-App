<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/iv_hospital"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:onClick="clickHospital"
            app:srcCompat="@drawable/hospital" />

        <ImageView
            android:id="@+id/iv_police"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:onClick="clickPolice"
            app:srcCompat="@drawable/police" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/iv_supermarket"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:onClick="clickMarket"
            app:srcCompat="@drawable/supermarket" />

        <ImageView
            android:id="@+id/iv_school"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:onClick="clickSchool"
            app:srcCompat="@drawable/school" />
    </TableRow>

</LinearLayout>